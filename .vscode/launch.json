{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "request": "launch",
      "name": "Mocha (all tests)",
      "program": "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
      "args": [
        "--config",
        "${workspaceFolder}/.mocharc.json",
        "src/**/*.test.ts"
      ]
    },
    {
      "type": "node",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "request": "launch",
      "name": "Mocha (current file)",
      "program": "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
      "args": ["--config", "${workspaceFolder}/.mocharc.json", "${file}"]
    },
    {
      "type": "chrome",
      "name": "http://localhost:3000",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "type": "node",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "request": "launch",
      "name": "Modelgen",
      "program": "${workspaceFolder}/src/tools/modelgen/modelgen.ts",
      "args": []
    },
    {
      "name": "Storybook",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run storybook",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://[^:]+:[0-9]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
